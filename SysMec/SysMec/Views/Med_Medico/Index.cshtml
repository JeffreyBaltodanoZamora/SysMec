@model IEnumerable<SysMec.Med_Medico>

@{
    ViewBag.Title = "Index";
}

<h5>Horario de atención médica</h5>

<p>
    @Html.ActionLink("Crear nuevo horario de atención médica", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Médico
        </th>
        <th>
            Primer Apellido
        </th>
        <th>
            Segundo Apellido
        </th>
        <th>
           Especialidad
        </th>
        <th>
            Turno de Inicio
        </th>
        <th>
            Turno de fin
        </th>
        <th>
            Descripción
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vc_Nombre_medico)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vc_primer_apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vc_segundo_apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vc_Especialidad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dt_turno_inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dt_turno_fin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado.vc_descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.i_pk_id_medico }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.i_pk_id_medico }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.i_pk_id_medico })
        </td>
    </tr>
}

</table>
